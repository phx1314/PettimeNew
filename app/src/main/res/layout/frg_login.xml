<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/f250dp"
        android:layout_marginTop="@dimen/f250dp"
        android:src="@drawable/login_03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/f140dp"
        android:layout_marginTop="@dimen/f140dp"
        android:src="@drawable/login_06" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/mRadioGroup_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j20dp"
            android:layout_marginRight="@dimen/j20dp"
            android:layout_marginTop="@dimen/j150dp"
            android:background="@drawable/shape_white"
            android:checkedButton="@+id/mTextView_dl"
            android:elevation="@dimen/j8dp"
            android:orientation="horizontal"
            android:padding="@dimen/j8dp">

            <RadioButton
                android:id="@+id/mRadioButton_dl"
                style="@style/text_style_15_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/select"
                android:drawablePadding="@dimen/j3dp"
                android:gravity="center"
                android:text="登录"
                android:textColor="@drawable/select_text" />

            <RadioButton
                android:id="@+id/mRadioButton_zc"
                style="@style/text_style_15_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="@drawable/select_bottom"
                android:drawablePadding="@dimen/j3dp"
                android:gravity="center"
                android:text="注册"
                android:textColor="@drawable/select_text" />
        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mLinearLayout_lodin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/mEditText_phone"
                    style="@style/text_style_13_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j25dp"
                    android:background="@drawable/shape_gray"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="@dimen/j5dp"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号"
                    android:padding="@dimen/j8dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/mEditText_pass"
                    style="@style/text_style_13_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j12dp"
                    android:background="@drawable/shape_gray"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/j5dp"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="@dimen/j8dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/mTextView_login"
                    style="@style/text_style_13_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j12dp"
                    android:background="@drawable/shape_login"
                    android:gravity="center"
                    android:padding="@dimen/j8dp"
                    android:text="登录" />

                <TextView
                    android:id="@+id/mTextView_wj"
                    style="@style/text_style_13_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j2dp"
                    android:gravity="center"
                    android:padding="@dimen/j8dp"
                    android:text="忘记密码"
                    android:textColor="#4E68F0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/j40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="@color/tyD1" />

                    <TextView
                        style="@style/text_style_15_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j8dp"
                        android:layout_marginRight="@dimen/j8dp"
                        android:text="快速登录" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="2px"
                        android:layout_weight="1"
                        android:background="@color/tyD1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/j30dp"
                    android:layout_marginLeft="@dimen/j20dp"
                    android:layout_marginRight="@dimen/j20dp"
                    android:layout_marginTop="@dimen/j10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/ImageButton_qq"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/qq" />

                    <ImageButton
                        android:id="@+id/ImageButton_wx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/wei" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mLinearLayout_zc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j25dp"
                    android:background="@drawable/shape_gray"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/mEditText_phone2"
                        style="@style/text_style_13_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableLeft="@drawable/phone"
                        android:drawablePadding="@dimen/j5dp"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号"
                        android:padding="@dimen/j8dp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/mTextView_get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/j8dp"
                        android:background="@drawable/shape_gray_b"
                        android:padding="@dimen/j5dp"
                        android:text="获取验证码"
                        android:textColor="#4E68F0"
                        android:textSize="13sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/mEditText_code"
                    style="@style/text_style_13_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j12dp"
                    android:background="@drawable/shape_gray"
                    android:drawableLeft="@drawable/vcode"
                    android:drawablePadding="@dimen/j5dp"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="textPassword"
                    android:padding="@dimen/j8dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/mEditText_pass2"
                    style="@style/text_style_13_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j12dp"
                    android:background="@drawable/shape_gray"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="@dimen/j5dp"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="@dimen/j8dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/mTextView_zc"
                    style="@style/text_style_13_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j40dp"
                    android:layout_marginRight="@dimen/j40dp"
                    android:layout_marginTop="@dimen/j12dp"
                    android:background="@drawable/shape_login"
                    android:gravity="center"
                    android:padding="@dimen/j8dp"
                    android:text="注册" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

