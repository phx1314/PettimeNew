<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/j8dp">

    <LinearLayout
        android:id="@+id/mLinearLayout1"
        android:layout_width="0dp"
        android:layout_height="@dimen/j100dp"
        android:layout_weight="1"
        android:background="@drawable/bg_tianjiashebeibg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maolongyihao" />

        <TextView
            android:id="@+id/mTextView_name"
            style="@style/text_style_17_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j10dp"
            android:text="133"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLinearLayout2"
        android:layout_width="0dp"
        android:layout_height="@dimen/j100dp"
        android:layout_weight="1"
        android:background="@drawable/bg_tianjiashebeibg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maolongyihao" />

        <TextView
            android:id="@+id/mTextView_name2"
            style="@style/text_style_17_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j10dp"
            android:text="133"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

