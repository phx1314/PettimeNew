<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/f250dp"
        android:layout_marginTop="@dimen/f250dp"
        android:src="@drawable/login_03" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/f140dp"
        android:layout_marginTop="@dimen/f140dp"
        android:src="@drawable/login_06" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j40dp"
            android:layout_marginRight="@dimen/j40dp"
            android:background="@drawable/shape_gray"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mEditText_phone2"
                style="@style/text_style_13_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/j5dp"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:padding="@dimen/j8dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mTextView_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/j8dp"
                android:background="@drawable/shape_gray_b"
                android:padding="@dimen/j5dp"
                android:text="获取验证码"
                android:textColor="#4E68F0"
                android:textSize="13sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/mEditText_code"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j40dp"
            android:layout_marginRight="@dimen/j40dp"
            android:layout_marginTop="@dimen/j12dp"
            android:background="@drawable/shape_gray"
            android:drawableLeft="@drawable/vcode"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:padding="@dimen/j8dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/mEditText_pass2"
            style="@style/text_style_13_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j40dp"
            android:layout_marginRight="@dimen/j40dp"
            android:layout_marginTop="@dimen/j12dp"
            android:background="@drawable/shape_gray"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/j5dp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="@dimen/j8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/mTextView_zc"
            style="@style/text_style_13_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j40dp"
            android:layout_marginRight="@dimen/j40dp"
            android:layout_marginTop="@dimen/j12dp"
            android:background="@drawable/shape_login"
            android:gravity="center"
            android:padding="@dimen/j8dp"
            android:text="确定" />
    </LinearLayout>
</RelativeLayout>

